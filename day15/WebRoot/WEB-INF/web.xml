<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>
  <servlet>
    <servlet-name>JndiServlet</servlet-name>
    <servlet-class>cn.itcast.web.jdbc.web.JndiServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CrmServlet</servlet-name>
    <servlet-class>cn.itcast.web.crm.web.CrmServlet</servlet-class>
  </servlet>

   <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
   </welcome-file-list>
  <servlet-mapping>
    <servlet-name>JndiServlet</servlet-name>
    <url-pattern>/JndiServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CrmServlet</servlet-name>
    <url-pattern>/CrmServlet</url-pattern>
  </servlet-mapping>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
